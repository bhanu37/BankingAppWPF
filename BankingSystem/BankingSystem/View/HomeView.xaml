<UserControl x:Class="BankingSystem.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankingSystem.View"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="970">
    <Grid>
        <StackPanel>
            <Label Content="{Binding Header}" FontSize="50"/>
            <Label Content="{Binding UserName}" FontSize="20"/>
            <Label Content="{Binding Email}" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
